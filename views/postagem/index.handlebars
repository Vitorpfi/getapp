<link rel="stylesheet" href="/css/css-modal.css">
<div class="container">


    <div class="card">
        <div class="card-body">
            <h1>{{postagem.titulo}}</h1>
            <h5>Por hora de serviço: <span class="green"> R${{postagem.valor}}</span></h5>
            <small>ID do Profissional:{{postagem.slug}}</small>
            <hr>
            <small>Data de publicação: {{postagem.data}}</small><br>
            <hr>
            {{postagem.descricao}}
            <br>
            {{postagem.conteudo}}
            <hr>
            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#modalExemplo">Entrar em
                contato!</button>
        </div>
        <div class="modal fade" id="modalExemplo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel"> O profissional ideal para você </h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="wrapper_form_modal">
                                <form action="" method="POST">
                                    <h3 class="mb-4  mt-2 text-form">Informações Pessoais</h3>
                                    <div class="row">
                                        <div class="col-sm-12 col-md-6 col-lg-6">
                                            <div class="form-group">
                                                <label for=""> Nome </label>
                                                <input type="text" class="form-control" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-6 col-lg-6">
                                            <div class="form-group">
                                                <label for=""> Email </label>
                                                <input type="text" class="form-control" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-6 col-lg-6">
                                            <div class="form-group">
                                                <label for=""> CEP - pessoal </label>
                                                <input type="text" class="form-control" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-6 col-lg-6">
                                            <div class="form-group">
                                                <label for=""> Data do Evento </label>
                                                <input type="text" class="form-control" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-6 col-lg-6">
                                            <div class="form-group">
                                                <label for=""> Endereço do Evento (Estado, cidade, rua) </label>
                                                <input type="text" class="form-control" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-6 col-lg-6">
                                            <div class="form-group">
                                                <label for=""> Periodo do evento (manha, tarde, noite...) </label>
                                                <input type="text" class="form-control" required>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <form action="">
                                    <h3 class=" mb-5 mt-4 text-form">Adicionar Cartão de credito</h3>
                                    <div class="row">
                                        <div class="col-sm-12 col-md-6 col-lg-6">
                                            <div class="form-group">
                                                <label for="">Nome do titular</label>
                                                <input type="text" class="form-control" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-6 col-lg-6">
                                            <div class="form-group">
                                                <label for="">Número do cartão</label>
                                                <input type="text" class="form-control" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-6 col-lg-6">
                                            <div class="form-group mb-4">
                                                <label for="">CVV</label>
                                                <input type="text" class="form-control" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group form-check">
                                        <input type="checkbox" class="form-check-input" required id="exampleCheck1">
                                        <label class="form-check-label" for="exampleCheck1">Concordo com os termos de
                                            uso</label>
                                    </div>
                                </form>
                            </div>


                <div class="wrapper_notification_modal">
                    <img class="text-center" src="/img/success.png" alt="">
                <h3>Entraremos em contato o quanto antes!</h3>
                    <a href="/">
                        <button class="btn-form mt-4 botao-titulo">Voltar para home</button>
                    </a>
                </div>
            </div>

            <div class="modal-footer">
                <button type="submit" class="btn-form botao-titulo" id="btn-form">Enviar mensagem</button>
            </div>
        </div>
    </div>
</div>





</div>
</div>