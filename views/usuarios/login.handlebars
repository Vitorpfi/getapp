<link rel="stylesheet" href="/css/css-login.css">
<script src="https://kit.fontawesome.com/a81368914c.js"></script>

<img class="wave" src="/img/wave.png">
<div class="container">
    <div class="row">
        <div class="col-lg-6 col-sm-12">


            <div class="img">
                <img src="/img/bg.svg">
            </div>
        </div>
        <div class="col-lg-6 col-sm-12">

            <div class="login-content">
                <form action="/usuarios/login" method="POST">
                    <img src="/img/avatar.svg">
                    <h2 class="title">Login</h2>
                    <div class="input-div one">
                        <div class="i">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="div">
                            <label for="email">Email</label>
                            <input type="email" name="email" class="input" id="" required>

                        </div>
                    </div>
                    <div class="input-div senha">
                        <div class="i">
                            <i class="fas fa-lock"></i>
                        </div>
                        <div class="div">
                            <label for="senha">Senha:</label>
                            <input type="password" name="senha" class="input" required>
                        </div>
                    </div>
                    <button type="submit" class="btn">Entrar</button>
                    <!-- <a href="">Cadastrar-se como profissional</a> -->




                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="/js/main.js"></script>