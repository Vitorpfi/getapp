<div class="container">

<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add">
<button class="btn btn-success">Nova Profissão</button>
</a> 

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{slug}}</small><br>
            <small>Data de criação: {{date}}</small> <br>
           <a href="/admin/categorias/edit/{{_id}}"> <button class="btn btn-success mt-4">Editar profissão</button></a>

          <form action="/admin/categorias/deletar/{{_id}}" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar profissão</button>
            </form>
        </div>
    </div>

    

{{else}}
<h4 class="mt-5">Nenhuma profissão registrada</h4>
{{/each}}
</div>