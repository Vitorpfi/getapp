<div class="container">

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
       
        <h3>{{titulo}}</h3>
                    <h5>Por hora de serviço: <span class="green"> R${{valor}}</span></h5>

        <p>{{descricao}}</p>
      <a href="/postagem/{{slug}}">
        <button class="btn btn-success">Leia mais</button>
      </a>
        <hr>
         <small>Categoria: {{categoria.nome}}</small> <br>
        <small>Data de publicação: {{data}}</small>
    </div>
</div>
{{else}}
<h5>Nenhuma postagem registrada!</h5>

{{/each}}
</div>